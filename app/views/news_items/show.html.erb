<div class="nitem-content">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-2">

            <div class="preview-images">
              <%@news_item.pictures.each do |picture|%>
                  <%=image_tag picture.image, class: 'img-responsive'%>
              <%end%>
            </div>

          </div>
          <div class="col-md-10">
            <%=image_tag @news_item.pictures.sample.image, class: 'img-responsive'%>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <h3><%=@news_item.title%></h3>
        10.10.2016<br>
        <p><%=@news_item.text%></p>
      </div>
    </div>
  </div>

</div>