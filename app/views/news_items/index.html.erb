<div class="container box news-items">
  <div class="row">
    <%@news_items.each do |news_item|%>
        <div class="col-md-offset-2 col-md-8 col-md-offset-2
                col-sm-offset-2 col-sm-8 col-sm-offset-2
                col-xs-offset-2 col-xs-8 col-xs-offset-2">
          <%=link_to news_item_path(news_item) do%>
              <div class="catalog-item-container">
                <%=image_tag(news_item.image(:show), class: 'img-responsive')%>
                <div class="item-caption">
                  <%=news_item.title%>
                </div>
              </div>
          <%end%>
        </div>
    <%end%>
  </div>
</div>
