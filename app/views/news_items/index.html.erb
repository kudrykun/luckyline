<div class="container box news-items">
  <div class="row">
    <%@news_items.each do |news_item|%>
    <div class="col-md-12">
      <div class="col-md-6">
        <%=image_tag(news_item.pictures.sample.image, class: 'img-responsive')%>
      </div>
      <div class="col-md-6">
        <h6 class="media-heading"><%=news_item.title%> <small class="date"><span class="glyphicon glyphicon-time"></span> <%=time_tag news_item.created_at%></small></h6>
        <p><%=news_item.text%></p><br/>
        <%=link_to 'Узнать больше', news_item_path(news_item), class: 'btn-examples'%>
      </div>
    </div>
    <%end%>
  </div>
</div>