<% if @subcategories %>
    <div id="body">
      <div class="container-fluid bg-6">
        <div class="row">
          <div class="col-md-12">

          </div>
        </div>
      </div>

      <div class="container-fluid">
        <div class="row content">
          <div class="col-md-12">
            <div class="col-md-3 sidenav text-left">
              <div class="list-group">
                <a  class="list-group-item ">
                  <form class="navbar-form" role="search">
                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Поиск">
                    </div>
                    <button type="submit" class="btn btn-default">Go</button>
                  </form>
                </a>

                <% @categories.each do |category| %>
                    <%= link_to category.name, subcategories_path(category), class: 'list-group-item' %>
                <%end%>
              </div>
            </div>

            <!--TODO image_tag(category.subcategories.sample.items.sample.pictures.sample.image-->
            <% @subcategories.each do |subcategory| %>
                <div class="col-md-3">
                  <%= link_to items_path(subcategory.category, subcategory) do %>
                      <%=image_tag '1.jpg', class: 'sc-item-img img-responsive'%>
                      <div class="panel-footer"><%=subcategory.name%></div>
                  <%end%>
                </div>
            <%end%>

          </div>
        </div>
      </div>
    </div>
<% else %>
    <p>There is no subcategories, bro</p>
<% end %>