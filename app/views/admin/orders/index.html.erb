<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Заказы</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-stripped table-hover">
        <caption>Заказы</caption>
        <thead>
        <tr>
          <th>ID</th>
          <th>Имя</th>
          <th>Номер телефона</th>
          <th>Email</th>
          <th>Товар</th>
          <th>Изображение</th>
          <th>Создан</th>
          <th>Обновлён</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% if @orders %>
            <%@orders.each do |order|%>
                <tr>
                  <th><%= order.id %></th>
                  <td><%= order.name %></td>
                  <td><%= order.phone_number %></td>
                  <td><%= order.email %></td>
                  <td>
                    <% if order.item %>
                        <%= order.item.title %>
                    <%else%>
                        Нет
                    <%end%>
                  </td>
                  <td>
                    <%if order.image.exists?%>
                        <%=image_tag order.image(:thumb), class: 'img-responsive'%>
                    <%else%>
                        Отсутствует
                    <%end%>
                  </td>
                  <td><%= time_tag order.created_at %></td>
                  <td><%= time_tag order.updated_at %></td>
                  <td>
                    <ul class="controls">
                      <li title="Показать">
                        <%= link_to admin_order_path(order) do %>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Удалить">
                        <%= link_to admin_order_path(order), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <%end%>
                      </li>
                    </ul>
                  </td>
                </tr>
            <%end%>
        <%else%>
            <tr>
              <th>-</th>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
