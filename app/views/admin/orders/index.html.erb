<div class="container">
  <table class="table table-stripped table-hover">
    <caption>Заказы</caption>
    <thead>
    <tr>
      <th>ID</th>
      <th>Имя</th>
      <th>Номер телефона</th>
      <th>Email</th>
      <th>Товар</th>
      <th>Создан</th>
      <th>Обновлён</th>
    </tr>
    </thead>
    <tbody>
    <% if @orders %>
    <%@orders.each do |order|%>
        <tr>
          <th><%= order.id %></th>
          <td><%= order.name %></td>
          <td><%= order.phone_number %></td>
          <td><%= order.email %></td>
          <td>
            <% if order.item %>
              <%= order.item.title %>
            <%else%>
              Нет
            <%end%>
          </td>
          <td><%= time_tag order.created_at %></td>
          <td><%= time_tag order.updated_at %></td>
        </tr>
    <%end%>
    <%else%>
        <tr>
          <th>-</th>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
        </tr>
    <%end%>
    </tbody>
  </table>
</div>
