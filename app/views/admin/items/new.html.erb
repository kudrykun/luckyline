<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Создать товар</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_for ([:admin,@item]),:html => {multipart: true} do |f| %>
          <% if @item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

                <ul>
                  <% @item.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title, 'Название' %>
            <%= f.text_field :title, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :description, 'Описание' %>
            <%= f.text_area :description, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :price, 'Цены' %>
            <%= f.text_area :price, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :category_id, 'Категория' %>
            <%= f.collection_select :category_id, @categories.order(:id), :id, :title, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= f.label :pictures, 'Изображения' %>
            <%= file_field_tag "images[]", type: :file, multiple: true %>
          </div>
          <div class="row">
            <%= f.submit 'Создать', class: 'btn btn-default' %>
            <%=link_to admin_items_path, class: 'btn btn-default' do%>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Назад
            <%end%>
          </div>
      <% end %>
    </div>
  </div>
</div>