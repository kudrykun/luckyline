<div class="container">
  <table class="table table-stripped table-hover">
    <caption>Товары</caption>
    <thead>
      <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Категория</th>
        <th>Создан</th>
        <th>Обновлён</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <%if @items%>
    <%@items.each do |item|%>
    <tr>
      <th><%= item.id %></th>
      <td><%= item.title %></td>
      <td><%= Category.find(item.category).title %></td>
      <td><%= time_tag item.created_at %></td>
      <td><%= time_tag item.updated_at %></td>
      <td>
        <ul class="controls">
          <li title="Показать">
            <%= link_to admin_item_path(item) do %>
            <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
            <%end%>
          </li>
          <li title="Редактировать">
            <%= link_to edit_admin_item_path(item), class: 'alo' do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <%end%>
          </li>
          <li title="Создать">
            <%= link_to new_admin_item_path, class: 'alo' do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <%end%>
          </li>
          <li title="Удалить">
          <%= link_to admin_item_path(item), method: :delete, data: { confirm: 'Вы уверены?' } do%>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <%end%>
          </li>
          <li title="Открыть на сайте">
            <%= link_to show_category_item_path(item.category,item), class: 'alo' do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <%end%>
          </li>
        </ul>
      </td>
    </tr>
    <%end%>
    <%else%>
    <tr>
      <th>-</th>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
    </tr>
    <%end%>
    </tbody>
  </table>
</div>