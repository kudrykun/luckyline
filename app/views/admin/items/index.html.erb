<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Товары</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to admin_items_path do %>
              <%=icon('list')%>
              Список
          <%end%>
        </li>
        <li role="presentation">
          <%= link_to new_admin_item_path do %>
              <%=icon('plus')%>
              Создать
          <%end%>
        </li>
      </ul>
    </div>
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <caption>Товары</caption>
        <thead>
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Категория</th>
          <th>Создан</th>
          <th>Обновлён</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%if @items%>
            <%@items.each do |item|%>
                <tr>
                  <th><%= item.id %></th>
                  <td><%= item.title %></td>
                  <td><%= Category.find(item.category).title %></td>
                  <td><%= time_tag item.created_at %></td>
                  <td><%= time_tag item.updated_at %></td>
                  <td>
                    <ul class="controls">
                      <li title="Показать">
                        <%= link_to admin_item_path(item) do %>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Редактировать">
                        <%= link_to edit_admin_item_path(item), class: 'alo' do %>
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Удалить">
                        <%= link_to admin_item_path(item), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Открыть на сайте">
                        <%= link_to show_category_item_path(item.category,item), class: 'alo' do %>
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        <%end%>
                      </li>
                    </ul>
                  </td>
                </tr>
            <%end%>
        <%else%>
            <tr>
              <th>-</th>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>