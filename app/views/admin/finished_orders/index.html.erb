<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Завершённые заказы</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to admin_finished_orders_path do %>
              <%=icon('list')%>
              Список
          <%end%>
        </li>
        <li role="presentation">
          <%= link_to new_admin_finished_order_path do %>
              <%=icon('plus')%>
              Создать
          <%end%>
        </li>
      </ul>
    </div>
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <caption>Завершённые заказы</caption>
        <thead>
        <tr>
          <th>ID</th>
          <th>Номер заказа</th>
          <th>Создан</th>
          <th>Обновлён</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%if @finished_orders%>
            <%@finished_orders.each do |finished_order|%>
                <tr>
                  <th><%= finished_order.id %></th>
                  <td><%= finished_order.order_number %></td>
                  <td><%= time_tag finished_order.created_at %></td>
                  <td><%= time_tag finished_order.updated_at %></td>
                  <td>
                    <ul class="controls">
                      <li title="Показать">
                        <%= link_to admin_finished_order_path(finished_order) do %>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Редактировать">
                        <%= link_to edit_admin_finished_order_path(finished_order), class: 'alo' do %>
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Удалить">
                        <%= link_to admin_finished_order_path(finished_order), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <%end%>
                      </li>
                    </ul>
                  </td>
                </tr>
            <%end%>
        <%else%>
            <tr>
              <th>-</th>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>