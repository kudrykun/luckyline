<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Галереи</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to admin_galleries_path do %>
              <%=icon('list')%>
              Список
          <%end%>
        </li>
        <li role="presentation">
          <%= link_to new_admin_gallery_path do %>
              <%=icon('plus')%>
              Создать
          <%end%>
        </li>
      </ul>
    </div>
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <caption>Галереи</caption>
        <thead>
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Описание</th>
          <th>Категория</th>
          <th>Изображений</th>
          <th>Превью</th>
          <th>Создан</th>
          <th>Обновлён</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%if @galleries%>
            <%@galleries.each do |gallery|%>
                <tr>
                  <th><%= gallery.id %></th>
                  <td><%= gallery.title %></td>
                  <td><%= gallery.description %></td>
                  <td><%= Category.find(gallery.category).title %></td>
                  <td><%= gallery.pictures.size %></td>
                  <td>
                    <%if gallery.preview%>
                        <%=image_tag gallery.preview.image(:thumb), class: 'img-responsive'%>
                    <%else%>
                        Отсутствует
                    <%end%>
                  </td>
                  <td><%= time_tag gallery.created_at %></td>
                  <td><%= time_tag gallery.updated_at %></td>
                  <td>
                    <ul class="controls">
                      <li title="Показать">
                        <%= link_to admin_gallery_path(gallery) do %>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Редактировать">
                        <%= link_to edit_admin_gallery_path(gallery), class: 'alo' do %>
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Удалить">
                        <%= link_to admin_gallery_path(gallery), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Открыть на сайте">
                        <%= link_to show_category_gallery_path(gallery.category,gallery), class: 'alo' do %>
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        <%end%>
                      </li>
                    </ul>
                  </td>
                </tr>
            <%end%>
        <%else%>
            <tr>
              <th>-</th>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>