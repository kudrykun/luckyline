<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Галерея "<%= @gallery.title %>"</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 panels">
      <div class="panel panel-info">
        <div class="panel-heading">Название</div>
        <div class="panel-body"><%= @gallery.title %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Описание</div>
        <div class="panel-body"><%= @gallery.description %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Заголовок H1</div>
        <div class="panel-body"><%= @gallery.header %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Категория</div>
        <div class="panel-body"><%= Category.find(@gallery.category).title %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Изображение-превью</div>
        <div class="panel-body">
          <%if @gallery.preview%>
              <%= image_tag @gallery.preview.image(:for_grid)%>
          <%else%>
              Отсутствует
          <%end%>
        </div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Создано</div>
        <div class="panel-body"><%= time_tag @gallery.created_at %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Обновлено</div>
        <div class="panel-body"><%= time_tag @gallery.updated_at %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Мета-название</div>
        <div class="panel-body"><%= @gallery.meta_title %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Мета-описание</div>
        <div class="panel-body"><%= @gallery.meta_description %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Изображения | Всего изображений: <%=@gallery.pictures.size%></div>
        <div class="panel-body">
          <div class="row">
            <% @gallery.pictures.each do |picture| %>
                <div class="col-md-2">
                  <%=image_tag picture.image(:thumb)%>
                </div>
            <%end%>

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 buttons">
      <%=link_to 'Назад', admin_galleries_path, class: 'btn btn-default'%>
      <%= link_to 'Редактировать',edit_admin_gallery_path(@gallery), class: 'btn btn-default' %>
      <%= link_to 'Удалить', admin_gallery_path(@gallery), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-default'%>
    </div>
  </div>
</div>