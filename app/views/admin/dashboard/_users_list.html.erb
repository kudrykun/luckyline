<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <caption>Товары</caption>
      <thead>
      <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>Админ</th>
        <th>Входов</th>
        <th>Текущая сессия</th>
        <th>IP текущей сессии</th>
        <th>Последней сессии</th>
        <th>IP последней сессии</th>
        <th>Время сессии</th>
      </tr>
      </thead>
      <tbody>
      <%if @users%>
          <%@users.each do |user|%>
              <tr>
                <th><%= user.id %></th><!--id-->

                <td><%= user.name %></td><!--Имя пользователя-->

                <td>
                  <%if user.admin%>
                      <%= icon('check', class: 'check-icon')%>
                  <%else%>
                      <%= icon('times', class: 'times-icon')%>
                  <%end%>
                </td> <!--Присвоена админка-->

                <td><%= user.sign_in_count %></td> <!--Количество входов-->

                <td>
                  <%if user.current_sign_in_at != nil%>
                    <%= time_tag user.current_sign_in_at %>
                  <%else%>
                    -
                  <%end%>
                </td> <!--Время начала текущей сессии-->

                <td>
                  <%if user.current_sign_in_at != nil%>

                      <%=distance_of_time_in_words(user.current_sign_in_at,DateTime.now)%>
                  <%else%>
                      -
                  <%end%>
                </td> <!--Время текущей сессии-->

                <td>
                  <%if user.current_sign_in_ip != nil%>
                      <%= user.current_sign_in_ip %>
                  <%else%>
                      -
                  <%end%>
                </td> <!--IP текущей сессии-->

                <td>
                  <%if user.last_sign_in_at != nil%>
                      <%= time_tag user.last_sign_in_at %>
                  <%else%>
                      -
                  <%end%>
                </td> <!--Время начала последней сессии-->

                <td>
                  <%if user.last_sign_in_ip != nil%>
                      <%=user.last_sign_in_ip %>
                  <%else%>
                      -
                  <%end%>
                </td> <!--IP последней сессии-->
              </tr>
          <%end%>
      <%else%>
          <tr>
            <th>-</th>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
          </tr>
      <%end%>
      </tbody>
    </table>
  </div>
</div>