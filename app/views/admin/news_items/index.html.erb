<div class="container">
  <table class="table table-stripped table-hover">
    <caption>Акции</caption>
    <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Текст</th>
      <th>Создан</th>
      <th>Обновлён</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% if @news_items%>
    <%@news_items.each do |news_item|%>
        <tr>
          <th><%= news_item.id %></th>
          <td><%= news_item.title %></td>
          <td><%= news_item.text %></td>
          <td><%= time_tag news_item.created_at %></td>
          <td><%= time_tag news_item.updated_at %></td>
          <td>
            <ul class="controls">
              <li title="Показать">
                <%= link_to admin_news_item_path(news_item) do %>
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Редактировать">
                <%= link_to edit_admin_news_item_path(news_item), class: 'alo' do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Создать">
                <%= link_to new_admin_news_item_path, class: 'alo' do %>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Удалить">
                <%= link_to admin_news_item_path(news_item), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Открыть на сайте">
                <%= link_to news_item_path(news_item), class: 'alo' do %>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                <%end%>
              </li>
            </ul>
          </td>
        </tr>
    <%end%>
    <%else%>
    <tr>
      <th>-</th>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
    </tr>
    <%end%>
    </tbody>
  </table>
</div>