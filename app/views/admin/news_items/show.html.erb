<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Акция "<%= @news_item.title %>"</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 panels">
      <div class="panel panel-info">
        <div class="panel-heading">Название</div>
        <div class="panel-body"><%= @news_item.title %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Текст</div>
        <div class="panel-body"><%= @news_item.text %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Создано</div>
        <div class="panel-body"><%= time_tag @news_item.created_at %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Обновлено</div>
        <div class="panel-body"><%= time_tag @news_item.updated_at %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Мета-название</div>
        <div class="panel-body"><%= @news_item.meta_title %></div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Мета-описание</div>
        <div class="panel-body"><%= @news_item.meta_description %></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 buttons">
      <%=link_to 'Назад', admin_news_items_path, class: 'btn btn-default'%>
      <%= link_to 'Редактировать',edit_admin_news_item_path(@news_item), class: 'btn btn-default' %>
      <%= link_to 'Удалить', admin_news_item_path(@news_item), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-default'%>
    </div>
  </div>
</div>