<div class="container" style="padding-top: 50px">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= @opinion.name %>
    </div>
    <div class="panel-body">
      Id: <%= @opinion.id %></br>
      Название: <%= @opinion.name %></br>
      Текст: <%= @opinion.text %></br>
      Инфо: <%= @opinion.info %></br>
      Создано: <%= time_tag @opinion.created_at %></br>
      Обновлён: <%= time_tag @opinion.updated_at %></br>
    </div>
  </div>

  <%=link_to 'Назад', :back%>
</div>