      <%= f.label :text, 'Текст отзыва' %>
      <%= f.text_area :text%>
    </div>
    <div class="field">
      <%= f.label :info, 'Прочая информация' %>
      <%= f.text_area :info%>
    </div>
    <div class="field">
      <%= f.label :order_number, 'Номер заказа' %>
      <%= f.number_field :order_number%>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

