<div class="container">
  <table class="table table-stripped table-hover">
    <caption>Отзывы</caption>
    <thead>
    <tr>
      <th>ID</th>
      <th>Имя</th>
      <th>Текст</th>
      <th>Инфо</th>
      <th>Создан</th>
      <th>Обновлён</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%if @opinions%>
    <%@opinions.each do |opinion|%>
        <tr>
          <th><%= opinion.id %></th>
          <td><%= opinion.name %></td>
          <td><%= opinion.text %></td>
          <td><%= opinion.info %></td>
          <td><%= time_tag opinion.created_at %></td>
          <td><%= time_tag opinion.updated_at %></td>
          <td>
            <ul class="controls">
              <li title="Показать">
                <%= link_to admin_opinion_path(opinion) do %>
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Редактировать">
                <%= link_to edit_admin_opinion_path(opinion), class: 'alo' do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Создать">
                <%= link_to new_admin_opinion_path, class: 'alo' do %>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Удалить">
                <%= link_to admin_opinion_path(opinion), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Открыть на сайте">
                <%= link_to opinion_path(opinion), class: 'alo' do %>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                <%end%>
              </li>
            </ul>
          </td>
        </tr>
    <%end%>
    <%else%>
    <tr>
      <th>-</th>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
    </tr>
    <%end%>
    </tbody>
  </table>
</div>