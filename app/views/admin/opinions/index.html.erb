<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Отзывы</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to admin_opinions_path do %>
              <%=icon('list')%>
              Список
          <%end%>
        </li>
        <li role="presentation">
          <%= link_to new_admin_opinion_path do %>
              <%=icon('plus')%>
              Создать
          <%end%>
        </li>
      </ul>
    </div>
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <caption>Отзывы</caption>
        <thead>
        <tr>
          <th>ID</th>
          <th>Имя</th>
          <th>Текст</th>
          <th>Изображение</th>
          <th>Инфо</th>
          <th>Создан</th>
          <th>Обновлён</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%if @opinions%>
            <%@opinions.each do |opinion|%>
                <tr>
                  <th><%= opinion.id %></th>
                  <td><%= opinion.name %></td>
                  <td><%= opinion.text %></td>
                  <td>
                    <%if opinion.image.exists?%>
                        <%=image_tag opinion.image(:thumb), class: 'img-responsive'%>
                    <%else%>
                        Отсутствует
                    <%end%>
                  </td><!--Изображение обложка-->
                  <td><%= opinion.info %></td>
                  <td><%= time_tag opinion.created_at %></td>
                  <td><%= time_tag opinion.updated_at %></td>
                  <td>
                    <ul class="controls">
                      <li title="Показать">
                        <%= link_to admin_opinion_path(opinion) do %>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Редактировать">
                        <%= link_to edit_admin_opinion_path(opinion), class: 'alo' do %>
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Удалить">
                        <%= link_to admin_opinion_path(opinion), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <%end%>
                      </li>
                      <li title="Открыть на сайте">
                        <%= link_to opinions_path, class: 'alo' do %>
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        <%end%>
                      </li>
                    </ul>
                  </td>
                </tr>
            <%end%>
        <%else%>
            <tr>
              <th>-</th>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td>-</td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>