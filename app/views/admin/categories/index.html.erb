<div class="container">
  <table class="table table-stripped table-hover">
    <caption>Категории</caption>
    <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Категория-родитель</th>
      <th>Товары</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% if @categories%>
    <%@categories.each do |category|%>
        <tr>
          <th><%= category.id %></th>
          <td><%= category.title %></td>
          <td>
            <%if category.parent%>
              <%= category.parent.title %>
            <%else%>
              Нет
            <%end%>
          </td>
          <td>
            <% if category.is_items %>
              Да
            <%else%>
              Нет
            <%end%>
          </td>
          <td>
            <ul class="controls">
              <li title="Показать">
                <%= link_to admin_category_path(category) do %>
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Редактировать">
                <%= link_to edit_admin_category_path(category), class: 'alo' do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Создать">
                <%= link_to new_admin_category_path, class: 'alo' do %>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Удалить">
                <%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Вы уверены?' } do%>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <%end%>
              </li>
              <li title="Открыть на сайте">
                <%= link_to subs_and_items_path(category), class: 'alo' do %>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                <%end%>
              </li>
            </ul>
          </td>
        </tr>
    <%end%>
    <%else%>
    <tr>
      <th>-</th>
      <td>-</td>
      <td>-</td>
      <td>-</td>
    </tr>
    <%end%>
    </tbody>
  </table>
</div>
