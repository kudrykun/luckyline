<div class="container" style="padding-top: 50px">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= @category.title %>
    </div>
    <div class="panel-body">
      Id: <%= @category.id %></br>
      Название: <%= @category.title %></br>
      <%if @category.parent %>
          Категория-родитель:<%= @category.parent.title %></br>
      <%else%>
          Категория-родитель: Нет</br>
      <%end%>
      <%if @category.subs.size != 0 %>
          Подкатегории:
          <ul>
            <%@category.subs.each do |sub|%>
            <li><%=sub.title%></li>
            <%end%>
          </ul>
      <%else%>
          Подкатегории: Нет</br>
      <%end%>
      Содержит товары :
      <% if @category.is_items %>
          Да
      <%else%>
          Нет
      <%end%>
      </br>
    </div>
  </div>

  <%=link_to 'Назад', :back%>
</div>

