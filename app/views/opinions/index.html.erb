<div style="text-align:center;">
  <h2>Отзывы</h2>
</div>
<% if @opinions %>
    <div class="col-md-12">
      <%@opinions.each do |opinion|%>
      <p> <span class="quoteses">&#8220;</span><%=opinion.text%></p>
      <p><span class="glyphicon glyphicon-time"></span> <%=opinion.name%>, 10 Октября, 2016.</p>
      <%end%>
    </div>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12">
          <button type="submit" class="btn ">Оставить</button>
        </div>
      </div>
    </div>
    <div class="center">
      <%= paginate @opinions %>
    </div>
<%else%>
    There is not opinions bro
<%end%>