<% if @opinions %>
<div class="container box opinions">
  <div class="row">
    <div class="col-md-6">
      <h1 class="info-header">Отзывы</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <button data-toggle="modal" data-target="#opinionModal" type="submit" class="btn ">Оставить отзыв</button>
    </div>
  </div>
  <div class="row">
    <%@opinions.each do |opinion|%>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <% if opinion.image_file_name != nil %>
          <div class="col-md-1 col-sm-1 col-xs-12">
            <span class="left-quotes">&#8220</span>
          </div>
          <div class="col-md-8 col-sm-11 col-xs-12">
            <%=opinion.text%>
            <%=render 'opinions/info', opinion: opinion%>
          </div>
          <div class="col-md-3 col-sm-12 opinion-image">
            <%=link_to opinion.image.url(:original), {'data-toggle': 'lightbox'} do %>
                <%=image_tag opinion.image(:for_grid), class: 'img-responsive', alt: opinion.alt%>
                <div class="images-count">
                  <div class="caption">4 фото</div>
                </div>
            <%end%>
          </div>
        <% else %>
          <div class="col-md-1 col-sm-1 col-xs-12">
            <span class="left-quotes">&#8220</span>
          </div>
          <div class="col-md-11 col-sm-11 col-xs-12">
            <%=opinion.text%>
            <%=render 'opinions/info', opinion: opinion%>
          </div>
        <% end %>

    </div>
    <%end%>
  </div>
  <div class="row">
    <div class="col-md-12">
      <button data-toggle="modal" data-target="#opinionModal" type="submit" class="btn ">Оставить отзыв</button>
    </div>
  </div>
  <div class="row">
    <%= paginate @opinions %>
  </div>
</div>
<%else%>
    There is not opinions bro
<%end%>

<%= render 'opinions/modal'%>


