<div style="text-align:center;">
  <h2>Отзывы</h2>
</div>
<% if @opinions %>
    <div class="col-md-12">
      <%@opinions.each do |opinion|%>
      <p> <span class="quoteses">&#8220;</span><%=opinion.text%></p>
      <p><span class="glyphicon glyphicon-time"></span> <%=opinion.name%>, <%=time_tag opinion.created_at%>.</p>
      <%end%>
    </div>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12">
          <button data-toggle="modal" data-target="#opinionModal" type="submit" class="btn ">Оставить отзыв</button>
        </div>
      </div>
    </div>
    <div class="center">
      <%= paginate @opinions %>
    </div>
<%else%>
    There is not opinions bro
<%end%>

<div class="modal fade" id="opinionModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h4>Оставьте отзыв о нашей работе</h4>
      </div>
      <div class="modal-body">
        <%= form_for @opinion do |f| %>
            <div class="form-group">
              <label for="name"><span class="glyphicon glyphicon-shopping-cart"></span> Имя*</label>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Ваше имя' %>
            </div>
            <div class="form-group">
              <label for="order_number"><span class="glyphicon glyphicon-user"></span> Номер вашего заказа*</label>
              <%= f.text_field :order_number, class: 'form-control', placeholder: 'Номер вашего заказа'%>
            </div>
            <div class="form-group">
              <label for="text"><span class="glyphicon glyphicon-user"></span> Отзыв*</label>
              <%= f.text_area :text, class: 'form-control', placeholder: 'Ваш отзыв'%>
            </div>
            <%= f.submit 'Оставить отзыв', class: 'btn btn-block' do%>
                <span class="glyphicon glyphicon-ok"></span>
            <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
          <span class="glyphicon glyphicon-remove"></span> Закрыть
        </button>
      </div>
    </div>
  </div>
</div>


