<% if @items %>
    <div id="body">
      <div class="container-fluid bg-6">
        <div class="row">
          <div class="col-md-12">

          </div>
        </div>
      </div>

      <div class="container-fluid">
        <div class="row content">
          <div class="col-md-12">
            <div class="col-md-3 sidenav text-left">
              <div class="list-group">
                <a  class="list-group-item ">
                  <%= render 'layouts/search' %>
                </a>

                <% @categories.each do |category| %>
                    <%= link_to category.name, subcategories_path(category), class: 'list-group-item' %>
                <%end%>
              </div>
            </div>

            <!--TODO image_tag(category.subcategories.sample.items.sample.pictures.sample.image-->
            <% @items.each do |item| %>
                <div class="col-md-3">
                  <%= link_to item_path(@category,@subcategory,item) do %>
                      <%=image_tag '1.jpg', class: 'sc-item-img img-responsive'%>
                      <div class="panel-footer"><%=item.title%></div>
                  <%end%>
                </div>
            <%end%>

          </div>
        </div>
      </div>
    </div>
<% else %>
    <p>There is no items, bro</p>
<% end %>