<div id="item-images-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <%@item.pictures.size.times do |i|%>
        <%if i == 0%>
            <li data-target="#item-images-carousel" data-slide-to="<%=i%>" class="active"></li>
        <%else%>
            <li data-target="#item-images-carousel" data-slide-to="<%=i%>"></li>
        <%end%>
    <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <%@item.pictures.each do |picture|%>
        <%if picture == @item.pictures.first%>
            <div class="item modal-image active">
              <div class="pic-container">
                <%=link_to picture.image.url(:original), {'data-toggle': 'lightbox','data-gallery':"carousel-gallery"} do %>
                    <%=image_tag picture.image(:for_show), class: 'img-responsive', alt: picture.alt%>
                <%end%>
              </div>
            </div>
        <%else%>
            <div class="item modal-image">
              <div class="pic-container">
                <%=link_to picture.image.url(:original), {'data-toggle': 'lightbox','data-gallery':"carousel-gallery"} do %>
                    <%=image_tag picture.image(:for_show), class: 'img-responsive', alt: picture.alt%>
                <%end%>
              </div>
            </div>
        <%end%>
    <%end%>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#item-images-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#item-images-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>