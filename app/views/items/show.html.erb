<div class="container box bg-offwhite">
  <div class="row">
    <div class="col-md-12">
      <h1 class="main-header">
        <%=@item.header%>
      </h1>
    </div>
  </div>
  <div class="row">
    <!--Карусель-->
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 image-box">
      <div class="col-md-12">
        <div class="image-container">
          <div class="image">
            <%=render 'items/carousel'%>
          </div>
        </div>
      </div>
    </div>
    <!--Цен(правый блок текста)-->
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 price">
      <div class="price-wrapper">
        <span style="font-weight: 700;">Цены:</span>
        <p><%=@item.price.html_safe%></p>
      </div>
    </div>
  </div>
  <!--Описание, основной текст-->
  <%if @item.description != ""%>
  <div class="row description">
    <div class="col-md-12">
      <h4>Описание:</h4>
      <p><%=@item.description.html_safe%></p>
    </div>
  </div>
  <%end%>
</div>
