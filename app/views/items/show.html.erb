
<div class="container box bg-offwhite">
  <div class="row">
    <div class="col-md-12">
      <h4 style="padding-bottom: 30px">
        <%=@item.title%>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 col-sm-12 col-xs-12 image-box">
      <div class="col-md-12">
        <%=image_tag @item.pictures.first.image, class: 'img-responsive', name: 'bigImg' %>
      </div>
      <div class="col-md-12 preview-images">
        <div class="row">
          <%@item.pictures.each do |picture|%>
              <div class="col-md-3 col-xs-3 preview-image">
                <%=image_tag picture.image, class: 'img-responsive', onMouseOver: "changeImg('#{picture.image.to_s}')" %>
              </div>
          <%end%>
        </div>
      </div>
    </div>
    <div class="col-md-5 col-sm-12 col-xs-12 price">
      <strong>Цены:</strong>
      <p><%=@item.price.html_safe%></p>
    </div>
  </div>
  <div class="row description">
    <div class="col-md-12">
      <strong>Описание:</strong>
      <p><%=@item.description%></p>
    </div>
  </div>
</div>